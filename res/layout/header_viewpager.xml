<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
 >
 <com.zlz.myviewpager.MyViewPager
        android:id="@+id/vp_header"
        android:layout_width="fill_parent"
        android:layout_height="180dp" >
    </com.zlz.myviewpager.MyViewPager>

    <TextView
        android:id="@+id/tv_headertxt"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="10sp"
        android:layout_alignBottom="@+id/vp_header"
        android:background="#77000000"
        android:gravity="center_vertical"
        android:text="hello android"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/ll_headimg"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vp_header"
        android:layout_alignRight="@+id/vp_header"
        android:layout_alignTop="@+id/tv_headertxt"
        android:paddingRight="10sp"
        android:orientation="horizontal" >
    </LinearLayout>

 
</RelativeLayout>